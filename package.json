{
  "name": "kaalis-store-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:proxy": "node vercel-dev.js",
    "dev": "concurrently -n \"FE,BE,PROXY\" -c \"blue,green,yellow\" \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:proxy\"",
    "build": "cd frontend && npm install && npm run build && cd .. && rm -rf dist && cp -r frontend/dist dist",
    "start": "node vercel-dev.js",
    "clean": "killall node || true"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "express": "^4.21.1",
    "http-proxy-middleware": "^3.0.3",
    "vercel": "^32.0.0"
  },
  "dependencies": {
    "apexcharts": "^4.2.0",
    "chart.js": "^4.4.7",
    "concurrently": "^9.1.0",
    "vue-chartjs": "^5.3.2",
    "vue3-apexcharts": "^1.8.0"
  }
}